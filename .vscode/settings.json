{
    "workbench.colorTheme": "Palenight (Mild Contrast)",
    "terminal.integrated.fastScrollSensitivity": 5,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.showActions": "never",
    "workbench.startupEditor": "none", // disable Welcome / Getting Started
    "debug.console.fontFamily": "'Source Code Pro', Consolas, 'Courier New', monospace",
    "debug.console.fontSize": 11,
    "debug.console.lineHeight": 20,
    "debug.enableStatusBarColor": false,
    "debug.focusEditorOnBreak": true,
    "debug.focusWindowOnBreak": true,
    "debug.showInStatusBar": "always",
    "debug.toolBarLocation": "docked",
    "debug.showVariableTypes": true,
    "chat.agent.maxRequests": 50,
    "chat.promptFilesLocations": {
        ".github/prompts/devcontainer": true
    },
    "editor.fontFamily": "'Source Code Pro', Consolas, 'Courier New', monospace",
    "terminal.integrated.fontFamily": "'Source Code Pro', Consolas, 'Courier New', monospace",
    "editor.fontSize": 11,
    "editor.lineHeight": 20,
    "editor.letterSpacing": 0.8, // lesser than terminal letter spacing
    "editor.tabSize": 4,
    "editor.wordWrap": "off",
    // "editor.formatOnSave": true,
    // "editor.formatOnPaste": true,
    "[toml]": {
        "editor.formatOnSave": false
    },
    "editor.renderWhitespace": "all",
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "editor.renderControlCharacters": true,
    "editor.minimap.scale": 3,
    "editor.minimap.side": "right",
    "editor.minimap.autohide": "mouseover", // perfect
    "editor.fontLigatures": true,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "workbench.editor.closeOnFileDelete": false, // prevent accidents
    "editor.smoothScrolling": true, // nice
    "terminal.integrated.smoothScrolling": true, // nice
    "editor.inlayHints.enabled": "offUnlessPressed", // Ctrl+Alt key
    "files.autoSave": "off",
    "editor.foldingImportsByDefault": false,
    "editor.cursorSmoothCaretAnimation": "on", // OMG!
    "editor.showFoldingControls": "always",
    "editor.stickyScroll.enabled": false, // can be very annoying
    "explorer.compactFolders": false,
    "explorer.decorations.badges": false, // keep colour, remove icons
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": { // AWESOME
        "*.scss": "${capture}.css",
        ".eslintrc.*": ".eslintignore, .editorconfig, .prettierrc",
        "appsettings.json": "appsettings.*.json"
    },
    "explorer.sortOrder": "type",
    "files.exclude": { // so helpful visually
        "**/node_modules": true,
        "**/node_modules/**": true,
        "**/*.log": true,
        "**/.gitconfig": true,
        "**/.lesshst": true,
        "**/.npmrc": true,
        "**/.bash_history": true,
        "**/.sudo_as_admin_successful": true,
        "**/**.egg-info": true,
        "**/__pycache__": true,
        "**/dist": true,
        "**/.ssh": true,
        "**/.npm": true,
        "**/.local": true,
        "**/.gnupg": true,
        "**/.dotnet": true,
        "**/.docker": true,
        "**/.config": true,
        "**/.cdk": true,
        "**/.cache": true,
        "**/.vscode-server": true,
        "**/cdk.out": true,
        "**/coverage": true,
        "**/.aws/cli": true,
        "**/.aws/sso": true,
        "**/.devcontainer/.*": true,
        "**/.kube": true,
        "**/.cdk.context.json": true,
        "**/.rediscli_history": true,
        "**/.pytest_cache": true,
        "**/.psql_history": true,
        "**/.python_history": true,
    },
    "search.showLineNumbers": true,
    "search.smartCase": true, // sensitive to upper case characters
    "scm.inputFontFamily": "'Source Code Pro', Consolas, 'Courier New', monospace",
    "scm.inputFontSize": 11,
    "scm.inputMinLineCount": 4,
    "scm.inputMaxLineCount": 10,
    "editor.rulers": [
        {
            "column": 80,
            "color": "#0c2b0c"
        },
        {
            "column": 120,
            "color": "#10455b"
        }
    ],
    "[scminput]": {
        "editor.wordWrap": "off"
    },
    "search.collapseResults": "alwaysExpand",
    "search.searchEditor.focusResultsOnSearch": true,
    "search.sortOrder": "type",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorWidth": 8,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyleInactive": "underline",
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.tabs.location": "left",
    "terminal.integrated.tabs.title": "${activeEditorShort}",
    "terminal.integrated.letterSpacing": 1.0,
    "workbench.settings.editor": "json",
    "window.commandCenter": false, // BLESSING
    "breadcrumbs.enabled": true, // clean file path clutter on tabs
    "editor.hideCursorInOverviewRuler": true,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "none",
    "workbench.tree.renderIndentGuides": "none",
    "workbench.tree.indent": 8,
    "editor.lineDecorationsWidth": 0, // ⚠️ [hack] left padding
    "search.exclude": { // declutter search results
        "**/node_modules": true,
        "**/node_modules/**": true,
        "**/*.log": true,
        "**/.gitconfig": true,
        "**/.lesshst": true,
        "**/.npmrc": true,
        "**/.bash_history": true,
        "**/.sudo_as_admin_successful": true,
        "**/**.egg-info": true,
        "**/__pycache__": true,
        "**/dist": true,
        "**/.ssh": true,
        "**/.npm": true,
        "**/.local": true,
        "**/.gnupg": true,
        "**/.dotnet": true,
        "**/.docker": true,
        "**/.config": true,
        "**/.cdk": true,
        "**/.cache": true,
        "**/.vscode-server": true,
        "**/cdk.out": true,
        "**/coverage": true,
        "**/.aws/cli": true,
        "**/.aws/sso": true,
        "**/.devcontainer/.*": true,
        "**/.kube": true,
        "**/.cdk.context.json": true,
        "**/.rediscli_history": true,
        "**/.pytest_cache": true,
        "**/.psql_history": true,
        "**/.python_history": true,
    },
    "gitlens.codeLens.enabled": false,
    "gitlens.graph.commitOrdering": "date",
    "gitlens.graph.minimap.enabled": true,
    "gitlens.graph.pullRequests.enabled": true,
    "workbench.colorCustomizations": {
        "editor.background": "#0a0a0a",
        "terminal.background": "#0c2b0c", // background of terminals and of copilot (default 0c2b0c)
        "sideBar.background": "#10455b", // background of sidebar (default 10455b)
        "sideBar.foreground": "#bdbdbd",
        "sideBarTitle.foreground": "#0a0a0a",
        "sideBar.dropBackground": "#0a0a0a",
        "sideBarSectionHeader.background": "#10455b",
        "sideBarSectionHeader.border": "#10455b",
        "sideBarSectionHeader.foreground": "#0a0a0a5b",
        // match all backgrounds with editor
        "activityBar.background": "#10455b",
        "titleBar.activeBackground": "#0a0a0a",
        "titleBar.inactiveBackground": "#0a0a0a",
        "tab.activeBackground": "#0c2b0c",
        "tab.inactiveBackground": "#0a0a0a",
        "editorGroupHeader.tabsBackground": "#0a0a0a",
        "tab.activeBorder": "#0a0a0a",
        "tab.activeBorderTop": "#0a0a0a",
        "statusBar.background": "#0a0a0a",
        "panel.background": "#0a0a0a",
        "panel.dropBorder": "#93268c",
        "panelTitleBadge.background": "#0a0a0a",
        "panelTitleBadge.foreground": "#1a5c1a",
        "panelSectionHeader.foreground": "#93268c",
        "panelTitle.activeBorder": "#0a0a0a",
        "panelTitle.inactiveForeground": "#0c2b0c",
        "panelTitle.activeForeground": "#1a5c1a",
        "statusBarItem.remoteBackground": "#0a0a0a",
        "statusBarItem.remoteForeground": "#1a5c1a",
        "panelSectionHeader.background": "#283f91",
        "breadcrumb.foreground": "#0c2b0c",
        // Change yellow warnings to a more pleasant color
        "editorWarning.foreground": "#0a0a0a",
        "editorWarning.background": "#d6c61740",
        "editorError.foreground": "#0a0a0a",
        "editorError.background": "#a3101089",
        "titleBar.activeForeground": "#0a0a0a",
        "titleBar.inactiveForeground": "#0a0a0a",
        "statusBar.foreground": "#1a5c1a",
        "activityBar.dropBorder": "#93264e",
        "activityBarBadge.background": "#10455b",
        "activityBarTop.foreground": "#93264e",
        "activityBarTop.background": "#93264e",
        "activityBar.foreground": "#0a0a0a",
        "activityBar.inactiveForeground": "#0a0a0a5b",
        "activityBar.activeBorder": "#0a2b39",
        // "editorWarning.border": "#d6c6173f",
        // Remove all borders
        "activityBar.border": "#0a0a0a00",
        "sideBar.border": "#0a0a0a00",
        "panel.border": "#0a0a0a00",
        "statusBar.border": "#0a0a0a00",
        "editorGroup.border": "#0a0a0a00",
        "tab.border": "#0a0a0a00",
        "editor.selectionBorder": "#0a0a0a00",
        "window.activeBorder": "#0a0a0a00",
        "window.inactiveBorder": "#0a0a0a00",
        "contrastBorder": "#0a0a0a00",
        "titleBar.border": "#0a0a0a00",
        "editorGroupHeader.tabsBorder": "#0a0a0a00",
        "editorGroupHeader.border": "#0a0a0a00",
        "editorOverviewRuler.border": "#0a0a0a00",
        "scrollbar.shadow": "#0a0a0a00",
        "dropdown.border": "#0a0a0a00",
        "list.highlightForeground": "#6ca4f8",
        "editor.lineHighlightBorder": "#0a0a0a00",
        "editor.selectionHighlightBorder": "#0a0a0a00",
        "list.activeSelectionBackground": "#0b2e3d", // on explorer, file just opened
        "list.inactiveSelectionBackground": "#05151c",
        "list.hoverBackground": "#0b2e3d",
        "input.background": "#0a0a0a",
        "dropdown.background": "#0a0a0a",
        "quickInput.background": "#0a0a0a",
        "focusBorder": "#0a0a0a00",
        "editorWidget.background": "#0a0a0a",
        "notifications.background": "#0a0a0a",
        "editor.lineNumbersBorder": "#0a0a0a",
        "editorWhitespace.foreground": "#0c2b0c",
        "editorLineNumber.foreground": "#0c2b0c",
        "editorLineNumber.activeForeground": "#1a5c1a",
        "[Copilot Theme]": {},
    },
    // "workbench.editor.tabSizing": "shrink",
    "workbench.editor.showTabs": "multiple",
    // "workbench.editor.tabSizing": "fixed",
    "workbench.editor.wrapTabs": false,
    "workbench.editor.tabActionCloseVisibility": false, // show close button on tabs
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "string.quoted.docstring.multi.python",
                    "string.quoted.docstring.multi.python punctuation.definition.string.begin.python",
                    "string.quoted.docstring.multi.python punctuation.definition.string.end.python",
                    "comment.block.documentation"
                ],
                "settings": {
                    "foreground": "#f0d37c" // Nice yellow color for docstrings
                }
            }
        ]
    },
    "git.decorations.enabled": false,
    // Pick a modern interpreter so builtins generics (list[str]) and | unions parse correctly
    "python.defaultInterpreterPath": "/usr/bin/python3"
}
